<h2>Ingredients</h2>

<% @ingredients.each do |ingredient| %>
  <ul>
    <li>
      <a href="/ingredients/<%= ingredient.id %>"><%= ingredient.name %></a>
      <a href="/ingredients/<%= ingredient.id %>/edit">Edit</a>
      <form method="post" action="/ingredients/<%= ingredient.id %>/delete">
        <input class="btn" type="submit" value="Delete Ingredient">
      </form>
    </li>
  </ul>
<% end %>

<a href="/ingredients/new">Add New Ingredient</a>